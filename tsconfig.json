{
  "compilerOptions": {
    "target": "es2017",
    "module": "commonjs",
    "removeComments": false,
    "preserveConstEnums": true,
    "moduleResolution": "node",
    "experimentalDecorators": true,
    "noImplicitAny": false,
    "allowSyntheticDefaultImports": true,
    "outDir": "lib",
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "strictNullChecks": true,
    "sourceMap": true,
    "baseUrl": ".",
    "rootDir": ".",
    "jsx": "react",
    "allowJs": true,
    "resolveJsonModule": true,
    "typeRoots": [
      "types",
      "global.d.ts",
      "node_modules/@types"
    ],
    "paths": {
      "types/*": [
        "./types/*"
      ],
      "@/components/*": [
        "./src/components/*"
      ],
      "@/style/*": [
        "./src/style/*"
      ],
      "@/assets/*": [
        "./src/assets/*"
      ],
      "@/mock/tarojs_components": [
        "./tests/mock/tarojs_components"
      ],
      "@/tests/helper": [
        "./tests/helper"
      ],
      "taro-ui-vue3": [
        "./dist"
      ]
    }
  },
  "exclude": [
    "node_modules",
    "dist"
  ],
  "include": [
    "types",
    "src/**/*",
    "global.d.ts"
  ],
  "compileOnSave": false
}