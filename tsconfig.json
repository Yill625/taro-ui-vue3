{
  "compilerOptions": {
    "target": "es2017",
    "module": "commonjs",
    "removeComments": false,
    "preserveConstEnums": true,
    "moduleResolution": "node",
    "experimentalDecorators": true,
    "noImplicitAny": false,
    "allowSyntheticDefaultImports": true,
    "forceConsistentCasingInFileNames": false,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "strictNullChecks": true,
    "sourceMap": true,
    "baseUrl": ".",
    "rootDir": ".",
    "jsx": "react",
    "allowJs": true,
    "resolveJsonModule": true,
    "types": [
      "jest",
      "node"
    ],
    "typeRoots": [
      "node_modules/@types",
      "packages/types"
    ]
  },
  "path": {
    "@taro-ui-vue3/types/*": [
      "packages/types/*"
    ]
  },
  "compileOnSave": false,
  "include": [
    "packages/**/*.ts",
    "packages/**/*.vue",
    "global.d.ts"
  ],
  "exclude": [
    "node_modules/*",
    "dist"
  ]
}